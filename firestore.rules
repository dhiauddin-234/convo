rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isChatParticipant(chatData) {
      return request.auth.uid in chatData.users;
    }

    function isMemberOfParentChat(chatId) {
      let chatDoc = get(/databases/$(database)/documents/chats/$(chatId));
      return chatDoc != null && isChatParticipant(chatDoc.data);
    }

    function isSender(messageData) {
      return request.auth.uid == messageData.senderId;
    }

    match /users/{userId} {
      // Users should be able to read other user's public profile info to start a chat
      allow get: if isSignedIn();
      // Listing all users is needed for the 'discover' page
      allow list: if isSignedIn();
      // A user can only create, update, or delete their own profile
      allow create, update, delete: if isOwner(userId);
    }

    match /chats/{chatId} {
      // You can only interact with a chat if you are a participant
      allow get, create, update, delete: if isMemberOfParentChat(chatId);
      // Don't allow listing all chats for security.
      allow list: if false;
    }

    match /chats/{chatId}/messages/{messageId} {
      // You can read messages in a chat you are part of
      allow get, list: if isMemberOfParentChat(chatId);
      // You can create a message in a chat you are part of, and you must be the sender
      allow create: if isMemberOfParentChat(chatId) && isSender(request.resource.data);
      // You can only update or delete your own messages
      allow update, delete: if isMemberOfParentChat(chatId) && isSender(resource.data);
    }
  }
}
