rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Checks if the requesting user's UID is in a list of UIDs.
    function isParticipant(userList) {
      return request.auth.uid in userList;
    }

    // Checks if the user is a participant of the parent chat.
    // This is for subcollections like 'messages' and requires one read.
    function isParentChatParticipant(chatId) {
      let chatDoc = get(/databases/$(database)/documents/chats/$(chatId));
      return chatDoc != null && isParticipant(chatDoc.data.users);
    }

    // Checks if the requesting user is the sender of a message.
    function isSender(messageData) {
      return request.auth.uid == messageData.senderId;
    }

    match /users/{userId} {
      // Allow any signed-in user to view public profiles and list users for discovery.
      allow get, list: if isSignedIn();
      // A user can only create, update, or delete their own profile document.
      allow create, update, delete: if isOwner(userId);
    }

    match /chats/{chatId} {
      // On create, user must be a participant in the new document's 'users' list.
      allow create: if isSignedIn() && isParticipant(request.resource.data.users);

      // On read/update/delete, user must be a participant in the existing document's 'users' list.
      allow get, update, delete: if isSignedIn() && isParticipant(resource.data.users);

      // Explicitly deny listing all chats for security reasons.
      allow list: if false;
    }

    match /chats/{chatId}/messages/{messageId} {
      // To read messages, user must be a participant of the parent chat.
      allow get, list: if isParentChatParticipant(chatId);

      // To create a message, user must be a participant and the specified sender.
      allow create: if isParentChatParticipant(chatId) && isSender(request.resource.data);

      // To update/delete a message, user must be a participant and the original sender.
      allow update, delete: if isParentChatParticipant(chatId) && isSender(resource.data);
    }
  }
}
